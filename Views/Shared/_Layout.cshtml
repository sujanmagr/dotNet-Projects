@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodY - Delicious Discoveries</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <style>
        /* General Styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        main {
            margin-top: 100px; /* Adjusted for fixed navbar */
        }

        /* Navbar Styles */
        header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #333;
            z-index: 1000;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
        }

        .logo {
            font-size: 24px;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 20px;
        }

            .nav-links li {
                position: relative;
            }

            .nav-links a {
                color: #fff;
                text-decoration: none;
                padding: 10px 15px;
                font-size: 16px;
                transition: color 0.3s ease;
            }

                .nav-links a:hover {
                    color: #f9a825;
                }

        .auth-buttons ul {
            list-style: none;
            display: flex;
            gap: 10px;
        }

        .auth-buttons a {
            color: #fff;
            text-decoration: none;
            padding: 8px 15px;
            border: 1px solid transparent;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .auth-buttons a:hover {
                background-color: #f9a825;
                color: #fff;
            }

        /* Footer Styles */
        footer {
            background-color: #333;
            color: #fff;
            padding: 40px 0;
            text-align: center;
        }

        .footer-content {
            display: flex;
            justify-content: space-around;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-section {
            flex: 1;
            padding: 20px;
        }

            .footer-section h4 {
                margin-bottom: 20px;
                font-size: 18px;
                color: #f9a825;
            }

            .footer-section p, .footer-section ul {
                font-size: 14px;
            }

            .footer-section ul {
                list-style: none;
                padding: 0;
            }

                .footer-section ul li a {
                    color: #fff;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                    .footer-section ul li a:hover {
                        color: #f9a825;
                    }

        .social-icons {
            margin-top: 20px;
        }

            .social-icons a {
                color: #fff;
                margin-right: 15px;
                font-size: 24px;
                transition: color 0.3s ease;
            }

                .social-icons a:hover {
                    color: #f9a825;
                }

        .footer-bottom {
            margin-top: 20px;
            border-top: 1px solid #555;
            padding-top: 20px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="logo">FoodY</div>
            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a href="#menu">Menu</a></li>
                <li><a href="#reviews">Reviews</a></li>
                <li><a href="#blog">Blog</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <div class="auth-buttons">
                <ul>
                    <li><a class="" id="openCartModal">Cart</a></li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <a class="nav-links" asp-controller="Product" asp-action="index" name="Product">Product</a>
                        </li>
                        <li>
                            <a class="nav-links" asp-controller="Categories" asp-action="index" name="Categories">Categories</a>
                        </li>
                        <li>
                            <a id="manage" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                        </li>
                        <li>
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link  border-0">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li>
                            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>About FoodY</h4>
                <p>Connecting food lovers with amazing local restaurants.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#menu">Menu</a></li>
                    <li><a href="#reviews">Reviews</a></li>
                    <li><a href="#blog">Blog</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Follow Us</h4>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            &copy; 2024 FoodY. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Notification")
    @await Html.PartialAsync("_CartPartial")
</body>
</html>
